# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Memory Server Configuration
MEMORY_LOG_LEVEL=INFO
MEMORY_MAX_SEARCH_RESULTS=50
MEMORY_ENABLE_ANALYTICS=true

